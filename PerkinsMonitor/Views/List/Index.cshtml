@using PerkinsMonitor;
@using System.Linq;
@using System.Collections.Generic;
@model IEnumerable<Session>

@{
    ViewBag.Title = "Lab List";
    Layout = "../Shared/_Layout.cshtml";
}

<body>
	@if(Model.Count() < 2)
	{
	<table>
	<tr><th>Student ID</th><th>Student</th><th>Time Started</th></tr>
	@foreach(Session s in Model)
		{
		<tr>
			<td>
			@s.Student.ID
			</td>
			<td>
			@s.Student.LastName , @s.Student.FirstName
			</td>
			<td>
			@s.TimeStarted.ToLongTimeString()
			</td>
		</tr>
		}

	</table>
	}
	else{
	<h2 style="text-align: center;">There are no students logged in at this time</h2>
	}
</body>

